<h2><button class="btn btn-block btn-primary" type="button" onclick="Cadastrar()">Registrar Vendas</button></h2>
<h2>Listagem de Vendas do Dia</h2>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var item in (List<VendaModel>)ViewBag.ListaVendas)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.Data</td>
            <td>@item.Vendedor_Id</td>
            <td>@item.Cliente_Id</td>
            <td>R$ @item.Total.ToString()</td>
        </tr>
            }
        }
    </tbody>
</table>
<br />

<script>
    function Cadastrar() {
        window.location.href = "../Venda/Registrar";
    }
</script>

